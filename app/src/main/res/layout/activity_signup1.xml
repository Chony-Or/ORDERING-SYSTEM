<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup1">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="419dp"
        android:layout_height="709dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg"
        android:fitsSystemWindows="false"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/submit_bt"
            android:layout_width="291dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="160dp"
            android:background="#3F51B5"
            android:fontFamily="sans-serif-medium"
            android:text="SUBMIT"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="420dp"
            android:layout_height="387dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/whitebg" />

    </RelativeLayout>

    <EditText
        android:id="@+id/regular_confirmpass"
        android:layout_width="293dp"
        android:layout_height="55dp"
        android:layout_marginEnd="-355dp"
        android:drawableLeft="@drawable/confirmpassicon"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
        app:layout_constraintTop_toBottomOf="@+id/regular_password" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="sans-serif-medium"
        android:text="Sign Up "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/regular_lastname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <EditText
        android:id="@+id/regular_password"
        android:layout_width="293dp"
        android:layout_height="52dp"
        android:layout_marginEnd="-355dp"
        android:drawableLeft="@drawable/passicon"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
        app:layout_constraintTop_toBottomOf="@+id/regular_username" />

    <EditText
        android:id="@+id/regular_username"
        android:layout_width="293dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-355dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Username"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-260dp"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/circle_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>